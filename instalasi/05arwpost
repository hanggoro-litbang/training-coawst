     18         $(FC) $(FFLAGS) $(LDFLAGS) -o $@ $(OBJS)  \
     19                 -L$(NETCDF)/lib -I$(NETCDF)/include  -lnetcdf -lnetcdff
=================================================================
# edit file src/Makefile add â€“lnetcdff

./compile

#Error: Invalid character in name at (1)
./clean
gedit configure.arwp

